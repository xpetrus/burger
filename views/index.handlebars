<div class = "container">
    <div class ="row" align = "center">
        <img src="assets/img/bburger.png" width="25%" height="25%" id = "bburger">
        <h1>I Feel Like Eating Burgers Today...</h1>
    </div>
    <div class = "row">
        <div class = "col-md-6">
            <div class = "undevoured" align = "right">
                <h4>Burgers:</h4>
                <ul>
                    {{#each burger}}
                        {{#unless devoured}}
                            {{> burger/burger-block eat = true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class = "col-md-6">
            <div class = "devoured" >
                <h4>Devoured:</h4>
                <ul>
                    {{#each burger}}
                        {{#if devoured}}
                            {{>burger/burger-block eat=false}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class = "row" align = "center">
        
        <form class = "add-burger">
            <div class = "form-group">
                
                <input type = "text" class = "form-control" id="burgerfield">
            </div>
            <h4><strong>Enter a burger you want to eat, then hit submit!</strong></h4>
            <button type = "submit" class = "btn btn-primary btn-lg">Submit</button>
        </form>

    </div>
</div>